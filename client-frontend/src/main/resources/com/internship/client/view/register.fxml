<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.internship.client.controller.RegisterController" spacing="12" alignment="CENTER" stylesheets="styles.css" prefWidth="480" prefHeight="640" styleClass="root">
    <children>
        <Label text="Create Account" styleClass="title" />
        <TextField fx:id="usernameField" promptText="Username" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <ComboBox fx:id="roleCombo" promptText="Role" maxWidth="Infinity" />
        <Button fx:id="registerButton" text="Register" maxWidth="Infinity" />
        <Label fx:id="messageLabel" styleClass="info" wrapText="true" />
        <HBox alignment="CENTER" spacing="6">
            <children>
                <Label text="Have an account?" />
                <Hyperlink fx:id="loginLink" text="Login" />
            </children>
        </HBox>
        <Pane VBox.vgrow="ALWAYS" />
    </children>
    <padding><Insets topRightBottomLeft="24" /></padding>
</VBox>



