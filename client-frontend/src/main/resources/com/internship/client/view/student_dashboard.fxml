<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.internship.client.controller.StudentDashboardController" stylesheets="styles.css">
    <top>
        <ToolBar>
            <items>
                <Label text="Student Dashboard" styleClass="title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshButton" text="Refresh" />
                <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="18" prefHeight="18" />
                <Button fx:id="logoutButton" text="Logout" />
            </items>
        </ToolBar>
    </top>
    <center>
        <SplitPane>
            <items>
                <TableView fx:id="internshipsTable">
                    <columns>
                        <TableColumn fx:id="colRole" text="Role" prefWidth="160" />
                        <TableColumn fx:id="colCompany" text="Company" prefWidth="200" />
                        <TableColumn fx:id="colRequirements" text="Requirements" prefWidth="300" />
                    </columns>
                </TableView>
                <TextArea fx:id="detailsArea" editable="false" wrapText="true" />
            </items>
        </SplitPane>
    </center>
</BorderPane>



