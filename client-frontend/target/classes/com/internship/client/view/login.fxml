<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.internship.client.controller.LoginController" spacing="12" alignment="CENTER" stylesheets="styles.css" prefWidth="420" prefHeight="560" styleClass="root">
    <children>
        <Label text="Virtual Internship" styleClass="title" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button fx:id="loginButton" text="Login" maxWidth="Infinity" />
        <Label fx:id="errorLabel" styleClass="error" wrapText="true" />
        <HBox alignment="CENTER" spacing="6">
            <children>
                <Label text="No account?" />
                <Hyperlink fx:id="registerLink" text="Register" />
            </children>
        </HBox>
        <Pane VBox.vgrow="ALWAYS" />
    </children>
    <padding><Insets topRightBottomLeft="24" /></padding>
</VBox>



